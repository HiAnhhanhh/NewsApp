<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        android:elevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Polls close in Turkeyâ€™s historic presidential runoff - CNN"
                android:textSize="25sp"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:maxLines="2"
                android:ellipsize="end"/>

            <LinearLayout
                android:id="@+id/mainLl"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:layout_below="@id/title">


                <TextView
                    android:id="@+id/descriptionTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/allerta"
                    android:maxLines="8"
                    android:text="In remarks Sunday night,President Joe Biden urged both chambers of Congress to pass the debt limit deal, while acknowledging key concessions made by both parties in order to finalize an agreement."
                    android:textSize="15sp"
                    android:layout_marginEnd="8dp"/>

                <ImageView
                    android:id="@+id/newsImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="center"
                    android:background="@drawable/ic_launcher_background"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/mainLl"
                android:padding="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/authorTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="By Anh"
                    android:textStyle="italic"
                    android:textColor="@color/blue"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/publishedAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Public At"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>